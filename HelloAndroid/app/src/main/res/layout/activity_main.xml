<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context="com.example.androfox.helloandroid.MainActivity"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/imageHeight"
        android:src="@drawable/udacity"
        android:scaleType="centerCrop"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/udacity"
        style="@style/Udacity"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/about_udacity"
        style="@style/TextStyle"
        android:textStyle="italic"
        android:background="@drawable/round_shape" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/address"
        style="@style/TextStyle"
        android:drawableLeft="@drawable/ic_map_black_36dp"
        android:autoLink="map"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/phone_number"
        style="@style/TextStyle"
        android:drawableLeft="@drawable/ic_call_black_36dp"
        android:autoLink="phone"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/website"
        style="@style/TextStyle"
        android:drawableLeft="@drawable/ic_web_black_36dp"
        android:autoLink="web"/>
</LinearLayout>
</ScrollView>